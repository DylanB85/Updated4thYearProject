{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/societyPages.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/css/bootstrap.css') }}"/>
{% endblock %}

{% block javascripts %}
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
{% endblock %}

{% block body %}

    <div class="SocietyInformation">
        <h1>Mental Health Ireland</h1>
        <h4>The following page contains information regarding Mental Health Ireland</h4>
        <p style="font-weight: bold;">Mental Health Ireland is a voluntary organisation which was established in 1966. Its purpose is to raise awareness regarding positive mental health
        to people who are feeling depressed or dealing with other personal problems. Mental Health Ireland fundraises to organise outings and events
        for people struggling with mental health issues in their communities. If you would like to donate to Mental Health Ireland you can do so
        <a href="http://www.mentalhealthireland.ie/get-involved/donate/" target="_blank">here</a> </p>
        <p>Website: <a href="http://www.mentalhealthireland.ie/" target="_blank">www.mentalhealthireland.ie</a></p>
        <p>Help Line: (01) 284 1166</p>
        <p>Email: <a href="mailto:info@mentalhealthireland.ie">info@mentalhealthireland.ie</a></p>
    </div>

    <div class="container">
        <h3>Social Media Feeds for Mental Health Ireland</h3>
        <div class="col-sm">
            <div class="column1">
                <div class="fb-page" data-href="https://www.facebook.com/Mental.Health.Ireland/" data-tabs="timeline" data-width="350" data-height="600"
                     data-small-header="false" data-adapt-container-width="true" data-hide-cover="false"
                     data-show-facepile="true">
                    <blockquote cite="https://www.facebook.com/Mental.Health.Ireland/" class="fb-xfbml-parse-ignore">
                        <a href="https://www.facebook.com/Mental.Health.Ireland/">Mental Health Ireland</a>
                    </blockquote>
                </div>
            </div>
        </div>

        <div class="col-sm">
            <div class="column2">
                <div class="twitter-page">
                    <a class="twitter-timeline" data-width="350" data-height="600" href="https://twitter.com/MentalHealthIrl?ref_src=twsrc%5Etfw">
                        Tweets by MentalHealthIrl
                    </a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                </div>
            </div>
        </div>
    </div>
{% endblock %}